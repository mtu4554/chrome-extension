{
    "name": "HateMeter",
    "description": "description",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting","tabs",
        "notifications",
        "http://*/",
        "https://*/"],
        
        
    "host_permissions": ["storage", "activeTab", "scripting","tabs",
        "notifications",
        "http://*/",
        "https://*/"],

    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/icon.png",
            "32": "/images/icon.png",
            "48": "/images/icon.png",
            "128": "/images/icon.png"
        }
    },

    "content_security_policy": {
        "extension_pages": "default-src 'self'; connect-src http://sudoisbloat.pythonanywhere.com; data: blob: filesystem:;"
      },

  
    "icons": {
        "16": "/images/icon.png",
        "32": "/images/icon.png",
        "48": "/images/icon.png",
        "128": "/images/icon.png"
    },
    "options_page": "options.html"
}